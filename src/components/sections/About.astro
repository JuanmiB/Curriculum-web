---
import Section from "@/components/Section.astro"
import {basics, projects, skills, certificates} from "@cv"
const {summary} = basics

// Calcular stats
const totalSkills = Object.values(skills).flat().length;
const totalProjects = projects.length;
const totalCerts = certificates.length;
---

<Section title="Sobre mí" id="about">
    <div class="about-wrapper">
        <!-- Texto principal con decoración -->
        <div class="about-content">
            <div class="quote-decoration">
                <svg width="40" height="40" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M6 17h3l2-4V7H5v6h3zm8 0h3l2-4V7h-6v6h3z"/>
                </svg>
            </div>

            <p class="about-text">
                {summary}
            </p>

            <div class="about-signature">
                <div class="signature-line"></div>
                <span class="signature-name">{basics.name}</span>
            </div>
        </div>

        <!-- Stats Cards -->
        <div class="stats-grid">
            <div class="stat-card stat-card-projects">
                <div class="stat-icon">
                    <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                        <line x1="9" y1="9" x2="15" y2="9"/>
                        <line x1="9" y1="15" x2="15" y2="15"/>
                    </svg>
                </div>
                <div class="stat-content">
                    <div class="stat-number">{totalProjects}+</div>
                    <div class="stat-label">Proyectos</div>
                </div>
                <div class="stat-decoration"></div>
            </div>

            <div class="stat-card stat-card-skills">
                <div class="stat-icon">
                    <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                        <polyline points="22 4 12 14.01 9 11.01"/>
                    </svg>
                </div>
                <div class="stat-content">
                    <div class="stat-number">{totalSkills}+</div>
                    <div class="stat-label">Tecnologías</div>
                </div>
                <div class="stat-decoration"></div>
            </div>

            <div class="stat-card stat-card-certs">
                <div class="stat-icon">
                    <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M12 2L2 7l10 5 10-5-10-5z"/>
                        <path d="M2 17l10 5 10-5"/>
                        <path d="M2 12l10 5 10-5"/>
                    </svg>
                </div>
                <div class="stat-content">
                    <div class="stat-number">{totalCerts}+</div>
                    <div class="stat-label">Certificaciones</div>
                </div>
                <div class="stat-decoration"></div>
            </div>
        </div>
    </div>
</Section>

<style>
    .about-wrapper {
        display: grid;
        grid-template-columns: 1fr;
        gap: 3rem;
        margin-top: 2rem;
    }

    @media (min-width: 1024px) {
        .about-wrapper {
            grid-template-columns: 1.5fr 1fr;
            gap: 4rem;
        }
    }

    /* Content */
    .about-content {
        position: relative;
        background: var(--color-bg);
        border: 2px solid var(--color-border);
        border-radius: var(--radius-2xl);
        padding: 2.5rem;
        box-shadow: var(--shadow-lg);
    }

    .dark .about-content {
        background: var(--color-neutral-900);
    }

    .quote-decoration {
        position: absolute;
        top: 1.5rem;
        left: 1.5rem;
        color: var(--color-primary-200);
        opacity: 0.3;
    }

    .dark .quote-decoration {
        color: var(--color-primary-800);
    }

    .about-text {
        white-space: pre-line;
        line-height: 1.9;
        font-size: 1.0625rem;
        color: var(--color-text);
        position: relative;
        z-index: 1;
        margin: 0 0 2rem 0;
    }

    @media (min-width: 640px) {
        .about-text {
            font-size: 1.125rem;
            line-height: 2;
        }
    }

    /* Signature */
    .about-signature {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-top: 2rem;
    }

    .signature-line {
        flex: 1;
        height: 2px;
        background: linear-gradient(to right, var(--color-primary-400), transparent);
    }

    .signature-name {
        font-size: 1.125rem;
        font-weight: var(--font-weight-bold);
        color: var(--color-primary-600);
        font-style: italic;
    }

    .dark .signature-name {
        color: var(--color-primary-400);
    }

    /* Stats Grid */
    .stats-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 1.5rem;
    }

    @media (min-width: 640px) and (max-width: 1023px) {
        .stats-grid {
            grid-template-columns: repeat(3, 1fr);
        }
    }

    /* Stat Card */
    .stat-card {
        position: relative;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
        padding: 2rem 1.5rem;
        background: var(--color-bg);
        border: 2px solid var(--color-border);
        border-radius: var(--radius-2xl);
        box-shadow: var(--shadow-lg);
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        overflow: hidden;
    }

    .stat-card:hover {
        transform: translateY(-8px) scale(1.05);
        box-shadow: var(--shadow-2xl);
    }

    .dark .stat-card {
        background: var(--color-neutral-900);
    }

    /* Diferentes estilos por tipo de stat */
    .stat-card-projects:hover {
        border-color: #3b82f6;
    }

    .stat-card-skills:hover {
        border-color: #10b981;
    }

    .stat-card-certs:hover {
        border-color: #f59e0b;
    }

    /* Icon */
    .stat-icon {
        width: 64px;
        height: 64px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: var(--radius-xl);
        background: linear-gradient(135deg, var(--color-primary-100), var(--color-accent-100));
        color: var(--color-primary-600);
        transition: all var(--transition-base);
    }

    .dark .stat-icon {
        background: linear-gradient(135deg, var(--color-primary-900), var(--color-accent-900));
        color: var(--color-primary-400);
    }

    .stat-card:hover .stat-icon {
        transform: scale(1.1) rotate(5deg);
    }

    .stat-card-projects .stat-icon {
        background: linear-gradient(135deg, #dbeafe, #bfdbfe);
        color: #3b82f6;
    }

    .dark .stat-card-projects .stat-icon {
        background: linear-gradient(135deg, #1e3a8a, #1e40af);
        color: #60a5fa;
    }

    .stat-card-skills .stat-icon {
        background: linear-gradient(135deg, #d1fae5, #a7f3d0);
        color: #10b981;
    }

    .dark .stat-card-skills .stat-icon {
        background: linear-gradient(135deg, #064e3b, #065f46);
        color: #34d399;
    }

    .stat-card-certs .stat-icon {
        background: linear-gradient(135deg, #fef3c7, #fde68a);
        color: #f59e0b;
    }

    .dark .stat-card-certs .stat-icon {
        background: linear-gradient(135deg, #78350f, #92400e);
        color: #fbbf24;
    }

    /* Number */
    .stat-number {
        font-size: 2.5rem;
        font-weight: var(--font-weight-extrabold);
        color: var(--color-text);
        line-height: 1;
        background: linear-gradient(135deg, var(--color-primary-600), var(--color-accent-500));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .stat-card-projects .stat-number {
        background: linear-gradient(135deg, #3b82f6, #2563eb);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .stat-card-skills .stat-number {
        background: linear-gradient(135deg, #10b981, #059669);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .stat-card-certs .stat-number {
        background: linear-gradient(135deg, #f59e0b, #d97706);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    /* Label */
    .stat-label {
        font-size: 0.9375rem;
        font-weight: var(--font-weight-semibold);
        color: var(--color-text-secondary);
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    /* Decoration */
    .stat-decoration {
        position: absolute;
        bottom: -20px;
        right: -20px;
        width: 100px;
        height: 100px;
        background: linear-gradient(135deg, var(--color-primary-200), var(--color-accent-200));
        border-radius: 50%;
        filter: blur(40px);
        opacity: 0.3;
        transition: all var(--transition-base);
    }

    .dark .stat-decoration {
        background: linear-gradient(135deg, var(--color-primary-800), var(--color-accent-800));
    }

    .stat-card:hover .stat-decoration {
        opacity: 0.5;
        transform: scale(1.2);
    }

    /* Animaciones de entrada */
    .about-content {
        animation: fadeInLeft 0.6s ease-out backwards;
    }

    @keyframes fadeInLeft {
        from {
            opacity: 0;
            transform: translateX(-30px);
        }
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    .stat-card {
        animation: fadeInScale 0.6s ease-out backwards;
    }

    @keyframes fadeInScale {
        from {
            opacity: 0;
            transform: scale(0.8);
        }
        to {
            opacity: 1;
            transform: scale(1);
        }
    }

    .stat-card:nth-child(1) { animation-delay: 0.2s; }
    .stat-card:nth-child(2) { animation-delay: 0.3s; }
    .stat-card:nth-child(3) { animation-delay: 0.4s; }
</style>