---
import Section from "../Section.astro";
import { projects } from "@cv";
import type { ImageMetadata } from "astro";

// Importar TODAS las im√°genes de la carpeta con import.meta.glob
const images: Record<string, {default: ImageMetadata}> = import.meta.glob("../../assets/projects/*", {
  eager: true
});

// Funci√≥n para obtener la imagen correcta a partir del nombre del JSON
const getImage = (imageName: string) => {
  if (!imageName) return null;

  // Normalizamos solo para buscar coincidencias
  const normalized = imageName.toLowerCase();

  // Cada valor de images es un m√≥dulo ES con .default.src
  const match = Object.values(images).find((img) => {
    const src = img?.default?.src ?? "";
    return src.toLowerCase().includes(normalized);
  });

  return match?.default?.src ?? null;
};
---

<Section title="Proyectos">
  <ul class="grid gap-8 lg:grid-cols-2 p-0">

    {projects.map(({ url, description, name, image }) => {
      const src = getImage(image);

      return (
        <li class="list-none group relative overflow-hidden rounded-xl shadow-md border border-gray-200 hover:shadow-xl transition-all duration-300">

          {src ? (
            <img 
              src={src}
              alt={`Proyecto ${name}`}
              class="w-full h-64 object-cover group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
            />
          ) : (
            <div class="w-full h-64 bg-gray-100 flex items-center justify-center">
              No image
            </div>
          )}

          <div class="absolute inset-0 bg-black/60 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex flex-col justify-center items-center text-white p-4">
            <h3 class="text-lg font-semibold mb-2">{name}</h3>
            <p class="text-sm text-center mb-4">{description}</p>

            <div class="flex gap-4">
              <a
                href={url}
                target="_blank"
                rel="noopener"
                class="bg-white text-black text-xs font-semibold px-3 py-1 rounded-md hover:bg-gray-200 transition"
              >
                üåê Ver sitio
              </a>
            </div>
          </div>

        </li>
      );
    })}

  </ul>
</Section>