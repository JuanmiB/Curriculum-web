---
import Section from "../Section.astro";
import { projects } from "@cv";
import type { ImageMetadata } from "astro";

// Cargamos todas las imÃ¡genes con metadata
const images = import.meta.glob("../../assets/projects/*", {
  eager: true,
  import: "default"
}) as Record<string, ImageMetadata>;

// Mapeamos filename â†’ metadata
const imageMap: Record<string, ImageMetadata> = {};

for (const [path, data] of Object.entries(images)) {
  const filename = path.split("/").pop(); // ejemplo "proyecto1.webp"
  if (filename) imageMap[filename] = data;
}

const getImage = (filename: string) => {
  return imageMap[filename]?.src ?? null;
};
---

<Section title="Proyectos">
  <ul class="grid gap-8 lg:grid-cols-2 p-0">

    {projects.map(({ url, description, name, image }) => {
      const src = getImage(image);

      return (
        <li class="list-none group relative overflow-hidden rounded-xl shadow-md border border-gray-200 hover:shadow-xl transition-all duration-300">

          {src ? (
            <img 
              src={src}
              alt={name}
              class="w-full h-64 object-cover group-hover:scale-105 transition-transform duration-300"
              loading="lazy"
            />
          ) : (
            <p class="w-full h-64">No image</p>
          )}

          <div class="absolute inset-0 bg-black/60 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex flex-col justify-center items-center text-white p-4">
            <h3 class="text-lg font-semibold mb-2">{name}</h3>
            <p class="text-sm text-center mb-4">{description}</p>
            <a class="bg-white px-3 py-1 rounded-md text-xs font-semibold text-black" href={url} target="_blank">
              ğŸŒ Ver sitio
            </a>
          </div>

        </li>
      );
    })}

  </ul>
</Section>