---
import Section from "../Section.astro";
import { projects } from "@cv";
---

<Section title="Proyectos">
<ul class="grid gap-8 lg:grid-cols-2 p-0">
  {projects.map(({ url, repo, description, name, image, highlights }) => (
    <li class="list-none group relative overflow-hidden rounded-xl shadow-md border border-gray-200 hover:shadow-xl transition-all duration-300">
      <img
        src={image}
        alt={`Proyecto ${name}`}
        class="w-full h-64 object-cover group-hover:scale-105 transition-transform duration-300"
        loading="lazy"
      />
      <div class="absolute inset-0 bg-black/60 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex flex-col justify-center items-center text-white p-4">
        <h3 class="text-lg font-semibold mb-2">{name}</h3>
        <p class="text-sm text-center mb-4">{description}</p>
        <div class="flex gap-4">
          <a href={url} target="_blank" rel="noopener" class="bg-white text-black text-xs font-semibold px-3 py-1 rounded-md hover:bg-gray-200 transition">
            ğŸŒ Ver sitio
          </a>
          {repo && (
            <a href={repo} target="_blank" rel="noopener" class="border border-white text-xs font-semibold px-3 py-1 rounded-md hover:bg-white hover:text-black transition">
              ğŸ’» Repositorio
            </a>
          )}
        </div>
      </div>
    </li>
  ))}
</ul>
</Section>
