---
import Section from "@/components/Section.astro";
import HTML from "../icons/Html.astro";
import CSS from "../icons/Css.astro";
import JavaScript from "../icons/JavaScript.astro";
import NodeJs from "../icons/NodeJs.astro";
import MySQL from "../icons/Sql.astro";
import Firebase from "../icons/Firebase.astro";
import MongoDb from "../icons/MongoDb.astro";
import React from "../icons/React.astro";
import ReactNative from "../icons/ReactNative.astro";
import Git from "../icons/Git.astro";
import GitHub from "../icons/Github.astro";
import Tailwind from "../icons/Tailwind.astro";
import { skills } from "@cv";

const SKILLS_ICONS: Record<string, any> = {
  HTML,
  CSS,
  JavaScript,
  React,
  ReactNative,
  NodeJs,
  MySQL,
  Firebase,
  MongoDb,
  Git,
  GitHub,
  Tailwind,
};
---

<Section title="Habilidades">
  <div class="skills-wrapper">
    {Object.entries(skills).map(([category, skillList]) => {
      const formattedCategory = category
        .replace(/([A-Z])/g, " $1")
        .trim()
        .replace(/^./, (c) => c.toUpperCase());

      return (
        <div class="skill-card" key={category}>
          <h4 class="category-title">
            <span class="bar"></span>{formattedCategory}
          </h4>

          <ul class="skill-list">
            {skillList.map((name) => {
              const Icon = SKILLS_ICONS[name];
              return (
                <li class="skill-item" key={name}>
                  <div class="icon-chip">{Icon && <Icon class="skill-icon" />}</div>
                  <span>{name === "ReactNative" ? "React Native" : name}</span>
                </li>
              );
            })}
          </ul>
        </div>
      );
    })}
  </div>
</Section>

<style>
  .skills-wrapper {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  /* Tarjetas modernas */
  .skill-card {
    background: #ffffff5c;
    border-radius: 16px;
    padding: 1.5rem;
    border: 1px solid rgba(220, 220, 220, 0.6);
    box-shadow: 0 3px 8px rgba(0,0,0,0.05);
    transition: all 0.3s ease;
  }

  .skill-card:hover {
    box-shadow: 0 10px 30px rgba(0,0,0,0.08);
    border-color: rgba(100, 100, 255, 0.4);
    background-color: #3b83f629;
  }

  .category-title {
    font-size: 1.1rem;
    font-weight: 700;
    margin-bottom: 0.8rem;
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .bar {
    display: block;
    width: 8px;
    height: 22px;
    border-radius: 6px;
    background: linear-gradient(45deg, #6366f1, #3b82f6);
  }

  .skill-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.65rem;
  }

  /* Item interactivo */
  .skill-item {
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 0.97rem;
    padding: 8px 10px;
    border-radius: 10px;
    transition: background 0.25s ease, transform 0.25s ease;
  }

  .skill-item:hover {
    background: #f0f4ffb4;
    transform: translateX(4px);
  }

  /* Icono dentro de chip */
  .icon-chip {
    background: #eef1ff;
    border-radius: 10px;
    padding: 6px;
    display: flex;
    justify-content: center;
    align-items: center;
    transition: background 0.25s ease;
  }

  .skill-item:hover .icon-chip {
    background: #dbe3ff96;
  }

  .skill-icon {
    width: 20px;
    height: 20px;
  }
</style>